    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="190dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:cardCornerRadius="20dp"
            android:layout_margin="20dp"
            app:cardElevation="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/round_info">

                <TextView
                    android:id="@+id/txt1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CĂN CƯỚC CÔNG DÂN"
                    android:textSize="25sp"
                    android:textColor="#F11212"
                    android:padding="25dp"
                    app:fontFamily="@font/baloo2"
                    />

                <TextView
                    android:id="@+id/txt2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Số:"
                    android:textColor="@color/black"
                    android:paddingLeft="25dp"
                    android:layout_below="@+id/txt1"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/txt_soCanCuoc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/txt2"
                    android:layout_below="@+id/txt1"
                    android:layout_marginBottom="0dp"
                    android:layout_marginLeft="5dp"
                    android:text="0123456789"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txt3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Họ và tên:"
                    android:textColor="@color/black"
                    android:paddingLeft="25dp"
                    android:layout_below="@+id/txt2"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/txt_noiKham"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/txt3"
                    android:layout_below="@+id/txt2"
                    android:layout_marginBottom="0dp"
                    android:layout_marginLeft="5dp"
                    android:text="Lý Trí Tài"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>


            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ubnd_logo"
            android:layout_marginTop="2dp"
            android:layout_marginRight="33dp"
            android:layout_alignParentRight="true"
            android:elevation="8dp"/>
    </RelativeLayout>

</layout>